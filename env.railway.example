DATABASE_PUBLIC_URL=postgresql://user:password@host:port/database

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
