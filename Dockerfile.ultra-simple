# Dockerfile ultra simple para Astro
FROM node:18-alpine

# Instalar pnpm
RUN npm install -g pnpm

# Directorio de trabajo
WORKDIR /app

# Copiar package.json simple
COPY package.json.simple ./package.json

# Instalar dependencias básicas
RUN pnpm install

# Copiar código fuente
COPY . .

# Build de la aplicación
RUN pnpm run build:simple

# Exponer puerto
EXPOSE 4321

# Comando de inicio
CMD ["pnpm", "run", "start:coolify"]
