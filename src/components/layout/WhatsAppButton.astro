---
const phoneNumber = '+573163769935'; // Reemplaza con tu número de WhatsApp
const message = '¡Hola! Me gustaría obtener más información.'; // Mensaje predeterminado
const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
---


<a
  id="whatsapp-button"
  href={whatsappURL}
  target="_blank"
  rel="noopener noreferrer"
  class="whatsapp-button"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="36"
    height="36"
    viewBox="0 0 24 24"
    fill="none"
    stroke="white"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"
    ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
      d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path><path
      d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
    ></path></svg
  >
  <span class="whatsapp-text">Escríbenos</span>
</a>

<style>
  /* Estilos base del botón */
  .whatsapp-button {
    position: fixed;
    bottom: 80px;
    right: 20px;
    background-color: #25d366; /* Color verde de WhatsApp */
    border-radius: 30px;
    padding: 10px 20px;
    display: flex;
    align-items: center;
    gap: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    text-decoration: none;
    z-index: 1000;
    transition: transform 0.3s ease-in-out;
  }

  .whatsapp-button:hover {
    transform: scale(1.05); /* Efecto de escala al pasar el mouse */
  }

  .whatsapp-icon {
    width: 36px;
    height: 36px;
    filter: brightness(0) invert(1); /* Icono blanco */
  }

  .whatsapp-text {
    color: white;
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase; /* Texto en mayúsculas */
  }

  /* Animación de pulso */
  @keyframes pulse {
    0% {
      transform: scale(1);
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }
    50% {
      transform: scale(1.1);
      box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.3);
    }
    100% {
      transform: scale(1);
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }
  }

  .pulse-animation {
    animation: pulse 2s infinite ease-in-out;
  }
</style>

<script>
  const button = document.getElementById('whatsapp-button');

  // Función para crear el efecto de vibración
  function vibrateButton() {
    button.style.transform = 'translateX(5px)'; // Mover a la derecha
    setTimeout(() => {
      button.style.transform = 'translateX(-5px)'; // Mover a la izquierda
      setTimeout(() => {
        button.style.transform = 'translateY(-5px)'; // Mover hacia arriba
        setTimeout(() => {
          button.style.transform = 'translateY(5px)'; // Mover hacia abajo
          setTimeout(() => {
            button.style.transform = 'translate(0, 0)'; // Volver a la posición original
          }, 50);
        }, 50);
      }, 50);
    }, 50);
  }

  // Repetir la vibración cada 10 segundos
  setInterval(vibrateButton, 10000);
</script>
