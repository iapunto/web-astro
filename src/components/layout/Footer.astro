---
import Logo from './Logo.astro';
import Button from '../common/Button.astro';

const {
  ctaTitle = 'Impulsa tu Negocio con IA',
  ctaDescription = 'Descubre cómo la inteligencia artificial puede transformar tu empresa.',
  ctaButtonText = 'Agenda una Consulta Gratuita',
  ctaButtonHref = '/',
} = Astro.props;
---

<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-sm text-center">
      <h2
        class="mb-2 text-4xl tracking-tight font-extrabold leading-tight text-gray-900 dark:text-white"
      >
        {ctaTitle}
      </h2>
      <p class="mb-6 font-light text-gray-500 dark:text-gray-400 md:text-lg">
        {ctaDescription}
      </p>
      <Button text={ctaButtonText} href={ctaButtonHref} variant="primary" />
    </div>
  </div>
</section>

<footer class="p-4 bg-white sm:p-6 dark:bg-gray-800">
  <div class="mx-auto max-w-screen-xl">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0">
        <a href="https://iapunto.com" class="flex items-center">
          <Logo />
        </a>
      </div>
      <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-4">
        <div>
          <h2
            class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
          >
            Servicios
          </h2>
          <ul class="text-gray-500 dark:text-gray-400">
            <li class="mb-2">
              <a
                href="/servicios/chatbots-inteligentes"
                class="hover:text-[#E51F52] hover:underline"
              >
                Chatbots Inteligentes
              </a>
            </li>
            <li class="mb-2">
              <a
                href="/servicios/diseno-desarrollo-web"
                class="hover:text-[#E51F52] hover:underline"
              >
                Diseño y Desarrollo Web
              </a>
            </li>
            <li class="mb-2">
              <a
                href="/servicios/publicidad-online-ia"
                class="hover:text-[#E51F52] hover:underline"
              >
                Publicidad Online con IA
              </a>
            </li>
            <li class="mb-2">
              <a
                href="/servicios/posicionamiento-seo"
                class="hover:text-[#E51F52] hover:underline"
              >
                Posicionamiento SEO
              </a>
            </li>
            <li class="mb-2">
              <a
                href="/servicios/marketing-de-contenidos"
                class="hover:text-[#E51F52] hover:underline"
              >
                Marketing de Contenidos
              </a>
            </li>
            <li class="mb-2">
              <a
                href="/servicios/desarrollo-apps-moviles"
                class="hover:text-[#E51F52] hover:underline"
              >
                Desarrollo de Apps Móviles
              </a>
            </li>
            <li class="mb-2">
              <a
                href="/servicios/odoo-erp"
                class="hover:text-[#E51F52] hover:underline"
              >
                Odoo ERP
              </a>
            </li>
            <li class="mb-2">
              <a
                href="/servicios/optimizacion-conversion"
                class="hover:text-[#E51F52] hover:underline"
              >
                Optimización y Conversión
              </a>
            </li>
            <li>
              <a
                href="/servicios/automatizacion-inteligente"
                class="hover:text-[#E51F52] hover:underline"
              >
                Automatización Inteligente
              </a>
            </li>
          </ul>
        </div>
        <div>
          <h2
            class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
          >
            Legal
          </h2>
          <ul class="text-gray-600 dark:text-gray-400">
            <li class="mb-2">
              <a
                href="/legal/politica-de-privacidad"
                class="hover:text-[#E51F52] hover:underline"
                >Política de Privacidad</a
              >
            </li>
            <li class="mb-2">
              <a
                href="/legal/terminos-y-condiciones"
                class="hover:text-[#E51F52] hover:underline"
                >T&eacute;rminos &amp; Condiciones</a
              >
            </li>
            <li class="mb-2">
              <a
                href="/legal/aviso-legal"
                class="hover:text-[#E51F52] hover:underline">Aviso Legal</a
              >
            </li>
            <li class="mb-2">
              <a
                href="/legal/declaracion-de-accesibilidad"
                class="hover:text-[#E51F52] hover:underline"
                >Declaración de Accesibilidad</a
              >
            </li>
            <li class="mb-2">
              <a
                href="/legal/politica-anti-spam"
                class="hover:text-[#E51F52] hover:underline"
                >Política Anti-Spam</a
              >
            </li>
            <li class="mb-2">
              <a
                href="/legal/politica-de-devoluciones-y-reembolsos"
                class="hover:text-[#E51F52] hover:underline"
                >Política de Devoluciones y Reembolsos</a
              >
            </li>
            <li class="mb-2">
              <a
                href="/legal/politica-de-seguridad"
                class="hover:text-[#E51F52] hover:underline"
                >Política de Seguridad</a
              >
            </li>
            <li class="mb-2">
              <a
                href="/legal/uso-de-cookies"
                class="hover:text-[#E51F52] hover:underline">Uso de Cookies</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">
            Síguenos
          </h2>
          <ul class="text-gray-600 dark:text-gray-400">
            <li class="mb-2"><a href="https://www.facebook.com/iapunto" class="hover:text-[#E51F52] hover:underline">Facebook</a></li>
            <li class="mb-2"><a href="https://www.instagram.com/iapunto" class="hover:text-[#E51F52] hover:underline">Instagram</a></li>
            <li class="mb-2"><a href="https://www.linkedin.com/company/iapunto" class="hover:text-[#E51F52] hover:underline">LinkedIn</a></li>
          </ul>
        </div>
        <div>
          <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">
            Suscríbete
          </h2>
          <form class="flex flex-col gap-2" name="newsletter" method="POST" data-netlify="true">
            <input type="hidden" name="form-name" value="newsletter" />
            <input type="email" name="email" required placeholder="Tu email" class="px-3 py-2 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#E51F52]" />
            <button type="submit" class="bg-[#E51F52] text-white rounded px-3 py-2 font-semibold hover:bg-[#c81a4a] transition">Suscribirme</button>
          </form>
          <p class="text-xs text-gray-400 mt-2">Recibe novedades y recursos de IA Punto. Sin spam.</p>
        </div>
      </div>
    </div>
  </div>
  <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
  <div
    class="mx-auto max-w-screen-xl sm:flex sm:items-center sm:justify-between"
  >
    <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
      >&copy; 2024 <a
        href="https://iapunto.com"
        class="hover:text-[#E51F52] hover:underline">IA Punto</a
      > | Todos los derechos reservados.
    </span>
    <div class="flex mt-4 space-x-4 mr-10 sm:justify-center sm:mt-0">
      <a
        href="https://www.facebook.com/iapunto"
        class="text-gray-500 hover:text-[#E51F52] dark:hover:text-white"
      >
        <svg
          class="w-6 h-6 text-gray-500 hover:text-[#E51F52] dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            fill-rule="evenodd"
            d="M13.135 6H15V3h-1.865a4.147 4.147 0 0 0-4.142 4.142V9H7v3h2v9.938h3V12h2.021l.592-3H12V6.591A.6.6 0 0 1 12.592 6h.543Z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
      <a
        href="https://www.instagram.com/iapunto"
        class="text-gray-500 hover:text-[#E51F52] dark:hover:text-white"
      >
        <svg
          class="w-6 h-6 text-gray-500 hover:text-[#E51F52] dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="none"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            fill-rule="evenodd"
            d="M3 8a5 5 0 0 1 5-5h8a5 5 0 0 1 5 5v8a5 5 0 0 1-5 5H8a5 5 0 0 1-5-5V8Zm5-3a3 3 0 0 0-3 3v8a3 3 0 0 0 3 3h8a3 3 0 0 0 3-3V8a3 3 0 0 0-3-3H8Zm7.597 2.214a1 1 0 0 1 1-1h.01a1 1 0 1 1 0 2h-.01a1 1 0 0 1-1-1ZM12 9a3 3 0 1 0 0 6 3 3 0 0 0 0-6Zm-5 3a5 5 0 1 1 10 0 5 5 0 0 1-10 0Z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
      <a
        href="https://x.com/iapunto"
        class="text-gray-500 hover:text-[#E51F52] dark:hover:text-white"
      >
        <svg
          class="w-6 h-6 text-gray-500 hover:text-[#E51F52] dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            d="M13.795 10.533 20.68 2h-3.073l-5.255 6.517L7.69 2H1l7.806 10.91L1.47 22h3.074l5.705-7.07L15.31 22H22l-8.205-11.467Zm-2.38 2.95L9.97 11.464 4.36 3.627h2.31l4.528 6.317 1.443 2.02 6.018 8.409h-2.31l-4.934-6.89Z"
          ></path>
        </svg>
      </a>
      <a
        href="https://www.linkedin.com/company/iapunto"
        class="text-gray-500 hover:text-[#E51F52] dark:hover:text-white"
      >
        <svg
          class="w-6 h-6 text-gray-500 hover:text-[#E51F52] dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            fill-rule="evenodd"
            d="M12.51 8.796v1.697a3.738 3.738 0 0 1 3.288-1.684c3.455 0 4.202 2.16 4.202 4.97V19.5h-3.2v-5.072c0-1.21-.244-2.766-2.128-2.766-1.827 0-2.139 1.317-2.139 2.676V19.5h-3.19V8.796h3.168ZM7.2 6.106a1.61 1.61 0 0 1-.988 1.483 1.595 1.595 0 0 1-1.743-.348A1.607 1.607 0 0 1 5.6 4.5a1.601 1.601 0 0 1 1.6 1.606Z"
            clip-rule="evenodd"></path>
          <path d="M7.2 8.809H4V19.5h3.2V8.809Z"></path>
        </svg>
      </a>
      <a
        href="https://www.youtube.com/@iapunto"
        class="text-gray-500 hover:text-[#E51F52] dark:hover:text-white"
      >
        <svg
          class="w-6 h-6 text-gray-500 hover:text-[#E51F52] dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            fill-rule="evenodd"
            d="M21.7 8.037a4.26 4.26 0 0 0-.789-1.964 2.84 2.84 0 0 0-1.984-.839c-2.767-.2-6.926-.2-6.926-.2s-4.157 0-6.928.2a2.836 2.836 0 0 0-1.983.839 4.225 4.225 0 0 0-.79 1.965 30.146 30.146 0 0 0-.2 3.206v1.5a30.12 30.12 0 0 0 .2 3.206c.094.712.364 1.39.784 1.972.604.536 1.38.837 2.187.848 1.583.151 6.731.2 6.731.2s4.161 0 6.928-.2a2.844 2.844 0 0 0 1.985-.84 4.27 4.27 0 0 0 .787-1.965 30.12 30.12 0 0 0 .2-3.206v-1.516a30.672 30.672 0 0 0-.202-3.206Zm-11.692 6.554v-5.62l5.4 2.819-5.4 2.801Z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</footer>

