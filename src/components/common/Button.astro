---
export interface Props {
  text?: string;
  href?: string;
  id?: string;
  variant?: "primary" | "secondary";
  type?: "button" | "submit" | "reset";
}
const { text, href, id, variant = "primary", type = "button" } = Astro.props;

const variants = {
  primary: "bg-primary-600 text-white border border-primary-600 hover:bg-white hover:text-primary-600 hover:border-primary-600 transition-colors duration-200",
  secondary: "bg-white text-primary-600 border border-primary-600 hover:bg-primary-600 hover:text-white hover:border-primary-600 transition-colors duration-200",
};
const baseClasses = "inline-block px-6 py-3 font-semibold rounded-lg shadow transition-colors duration-200 text-center";
const buttonClasses = `${baseClasses} ${variants[variant]}`;
---

{href ? (
  <a href={href} id={id} class={buttonClasses}>
    <slot>{text}</slot>
  </a>
) : (
  <button type={type} id={id} class={buttonClasses}>
    <slot>{text}</slot>
  </button>
)}
