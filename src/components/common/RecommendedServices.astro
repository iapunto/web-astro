---
import ServiceCard from './ServiceCard.astro';
import { services } from '../../lib/constants/services';

export interface Props {
  excludeSlug?: string;
}
const { excludeSlug } = Astro.props;

const cornerstoneSlugs = [
  'diseno-desarrollo-web',
  'posicionamiento-seo',
  'publicidad-online-ia',
];

const recommended = services.filter(
  (s) => cornerstoneSlugs.some((slug) => s.link.endsWith(slug)) && (!excludeSlug || !s.link.endsWith(excludeSlug))
);
---

<section class="py-16 bg-gray-50 mt-12">
  <div class="container w-4/5 mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center">
      Servicios recomendados para potenciar tu negocio
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {recommended.map((service: any) => (
        <ServiceCard
          title={service.title}
          description={service.description}
          icon={service.icon}
          alt={service.alt}
          link={service.link}
          ctaText={service.ctaText}
        />
      ))}
    </div>
  </div>
</section> 