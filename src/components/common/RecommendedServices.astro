---
import ServiceCard from './ServiceCard.astro';
import { services } from '../../lib/constants/services';

export interface Props {
  excludeSlug?: string;
}
const { excludeSlug } = Astro.props;

const cornerstoneSlugs = [
  'diseno-desarrollo-web',
  'posicionamiento-seo',
  'publicidad-online-ia',
];

const recommended = services.filter(
  (s) => cornerstoneSlugs.some((slug) => s.link.endsWith(slug)) && (!excludeSlug || !s.link.endsWith(excludeSlug))
);
---

<section class="py-16 bg-gray-50 mt-12">
  <div class="container w-4/5 mx-auto">
    <div class="text-center mb-20">
      <h3 class="text-xl font-light text-gray-600 uppercase tracking-wider mb-2">Servicios Recomendados</h3>
      <h2 class="text-5xl font-bold text-gray-900 leading-tight mb-4">
        Potencia tu negocio
      </h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {recommended.map((service: any) => (
        <ServiceCard
          title={service.title}
          description={service.description}
          icon={service.icon}
          alt={service.alt}
          link={service.link}
          ctaText={service.ctaText}
        />
      ))}
    </div>
  </div>
</section> 