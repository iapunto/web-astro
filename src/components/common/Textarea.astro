---
export interface Props {
  id: string;
  name: string;
  label: string;
  value?: string;
  required?: boolean;
  placeholder?: string;
  rows?: number;
  className?: string;
}
const {
  id,
  name,
  label,
  value = '',
  required = false,
  placeholder = '',
  rows = 4,
  className = '',
} = Astro.props as Props;
---

<div class="mb-4">
  <label for={id} class="block text-sm font-medium text-gray-700 mb-1"
    >{label}{required && <span class="text-red-500">*</span>}</label
  >
  <textarea
    id={id}
    name={name}
    required={required}
    placeholder={placeholder}
    rows={rows}
    class={`mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50 ${className}`}
    >{value}</textarea
  >
</div>

