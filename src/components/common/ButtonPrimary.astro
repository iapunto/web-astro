---
export interface Props {
  text: string;
  href?: string;
  id?: string;
}
const { text, href, id } = Astro.props;
---

<!-- #if href -->
<a
  href={href}
  id={id}
  class="inline-block px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg shadow hover:bg-primary-700 transition-colors duration-200 text-center"
>
  {text}
</a>
<!-- #else -->
<button
  type="button"
  id={id}
  class="inline-block px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg shadow hover:bg-primary-700 transition-colors duration-200 text-center"
>
  {text}
</button>
<!-- /if -->
