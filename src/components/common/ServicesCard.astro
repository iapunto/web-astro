---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  icon: ImageMetadata;
  altText: string;
  title: string;
  description: string;
  linkHref: string;
  ctaText: string;
}
const { icon, altText, title, description, linkHref, ctaText } = Astro.props;
---

<article
  class="bg-white rounded-lg shadow-lg p-8 flex flex-col items-center text-center h-full"
>
  <img src={icon.src} alt={altText} class="w-20 h-20 mb-4" loading="lazy" width="80" height="80" />
  <h3 class="text-xl font-bold mb-2 text-gray-900">{title}</h3>
  <p class="text-gray-600 mb-6 flex-1">{description}</p>
  <a
    href={linkHref}
    class="inline-block px-6 py-2 bg-primary-600 text-white rounded-lg shadow hover:bg-primary-700 transition font-semibold"
  >
    {ctaText}
  </a>
</article>
