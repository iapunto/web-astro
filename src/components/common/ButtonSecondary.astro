---
export interface Props {
  text: string;
  href?: string;
}
const { text, href } = Astro.props;
---

{
  href ? (
    <a
      href={href}
      class="inline-block px-6 py-3 border-2 border-primary-600 text-primary-600 font-semibold rounded-lg shadow hover:bg-primary-600 hover:text-white transition-colors duration-200 text-center bg-white"
    >
      {text}
    </a>
  ) : (
    <button
      type="button"
      class="inline-block px-6 py-3 border-2 border-primary-600 text-primary-600 font-semibold rounded-lg shadow hover:bg-primary-600 hover:text-white transition-colors duration-200 text-center bg-white"
    >
      {text}
    </button>
  )
}
