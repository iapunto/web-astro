---
import { Image } from 'astro:assets';
import Button from '../common/Button.astro';

import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  description: string;
  icon: ImageMetadata;
  alt: string;
  link: string;
  ctaText: string;
}
const { title, description, icon, alt, link, ctaText } = Astro.props;
---

<article
  class="bg-white rounded-lg border border-gray-200 p-8 flex flex-col items-center text-center h-full"
>
  <img src={icon.src} alt={alt || title} class="w-20 h-20 mb-4" loading="lazy" width="80" height="80" />
  <h3 class="text-xl font-bold mb-2 text-gray-900">{title}</h3>
  <p class="text-gray-600 mb-6 flex-1">{description}</p>
  <Button text={ctaText} href={link} variant="primary" />
</article>
