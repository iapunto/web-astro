---
export interface Props {
  features: Array<{
    icon?: string;
    title: string;
    description: string;
  }>;
}
const { features } = Astro.props;
---
<section class="w-full bg-gray-100 py-12 md:py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold text-primary-600 mb-8 text-center">Caracter√≠sticas Destacadas</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((f, i) => (
        <div class="bg-white rounded-xl shadow p-6 flex flex-col items-center text-center" key={i}>
          {f.icon && <span class="mb-4">{f.icon}</span>}
          <h3 class="text-lg font-semibold text-gray-900 mb-2">{f.title}</h3>
          <p class="text-gray-600">{f.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 