---
export interface Props {
  title: string;
  description: string;
  image: string;
  alt: string;
}
const { title, description, image, alt } = Astro.props;
---
<section class="overflow-hidden bg-white py-16 sm:py-20">
  <div class="mx-auto max-w-2xl flex flex-col items-center text-center px-4">
    <img
      src={image}
      alt={alt}
      class="w-56 h-56 mb-6 object-contain mx-auto rounded-xl shadow-lg"
      width="224"
      height="224"
      loading="lazy"
    />
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">{title}</h1>
    <p class="text-lg md:text-xl text-gray-700 mb-0">{description}</p>
  </div>
</section> 