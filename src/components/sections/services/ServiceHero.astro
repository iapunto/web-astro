---
export interface Props {
  title: string;
  description: string;
  image: string;
  alt: string;
}
const { title, description, image, alt } = Astro.props;
---
<section class="w-full bg-white py-12 md:py-20">
  <div class="container mx-auto flex flex-col md:flex-row items-center gap-8 px-4">
    <div class="flex-1 text-center md:text-left">
      <h1 class="text-3xl md:text-5xl font-bold text-gray-900 mb-4">{title}</h1>
      <p class="text-lg md:text-2xl text-gray-700 mb-6">{description}</p>
    </div>
    <div class="flex-1 flex justify-center md:justify-end">
      <img
        src={image}
        alt={alt}
        class="w-2/3 max-w-xs md:max-w-md rounded-xl shadow-lg object-contain"
        width="320"
        height="320"
        loading="lazy"
      />
    </div>
  </div>
</section> 