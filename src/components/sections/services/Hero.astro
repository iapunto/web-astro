---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  alt: string;
  bgColor?: string;
  textColor?: string;
}

const { title, description, image, alt, bgColor = '#fcfcfc', textColor = '#000000' } = Astro.props;
---

<section
  class="relative h-screen flex items-center justify-center"
  style={{ backgroundColor: bgColor }}
>
  <div class="relative z-10 text-center px-6 flex flex-col items-center">
    {/* Centra vertical y horizontalmente */}
    <div class="mb-4 flex flex-col items-center">
      {/* Espacio entre la imagen y el título */}
      <img
        src={image.src}
        alt={alt || title}
        class="object-contain w-full h-auto aspect-3/2 responsive"
        width={450}
        height={450}
        loading="lazy"
      />
    </div>
    <h1 class="text-5xl font-bold mb-4 text-black">
      {title}
    </h1>
    <p class="text-2xl mb-8 w-[700px] text-black">
      {description}
    </p>
    {/* Puedes añadir un botón u otros elementos aquí */}
  </div>
</section>
