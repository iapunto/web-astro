---
export interface Props {
  faqs: Array<{
    question: string;
    answer: string;
  }>;
}
const { faqs } = Astro.props;
---
<section class="w-full bg-white py-12 md:py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold text-primary-600 mb-8 text-center">Preguntas Frecuentes</h2>
    <div class="space-y-4 max-w-2xl mx-auto">
      {faqs.map((faq, i) => (
        <details class="bg-gray-50 rounded-lg shadow p-4" key={i}>
          <summary class="font-semibold cursor-pointer text-gray-900">{faq.question}</summary>
          <p class="mt-2 text-gray-600">{faq.answer}</p>
        </details>
      ))}
    </div>
  </div>
</section> 