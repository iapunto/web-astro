---
export interface Props {
  faqs: Array<{
    question: string;
    answer: string;
  }>;
  subtitle?: string;
  description?: string;
}
const { faqs, subtitle = 'Chatbots Inteligentes: ¡Todo lo que Necesitas Saber!', description = '¿Tienes preguntas sobre los chatbots? ¡Tenemos respuestas! Aquí te despejamos las dudas más comunes sobre nuestros chatbots inteligentes y cómo pueden revolucionar tu negocio.' } = Astro.props;
---

<section class="overflow-hidden bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-4 lg:px-8 content-center">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 class="text-base/7 font-semibold text-[#E51F52]">Preguntas Frecuentes</h2>
      <h3 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight text-pretty text-gray-900 mb-2">{subtitle}</h3>
      <p class="mt-2 text-lg text-gray-600 mb-8">{description}</p>
      <div class="space-y-3 max-w-2xl mx-auto mt-10 md:mt-14">
        {faqs.map((faq, i) => (
          <details class="faq-accordion group bg-gray-50 rounded-xl border border-gray-200 transition-colors duration-200">
            <summary class="faq-summary font-medium cursor-pointer text-gray-900 px-6 py-4 flex items-center justify-between transition-colors duration-200 group-open:text-primary focus:outline-none">
              {faq.question}
              <span class="ml-2 transition-transform duration-200 group-open:rotate-90 text-gray-400">
                <svg width="20" height="20" fill="none" viewBox="0 0 20 20"><path d="M6 8l4 4 4-4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
              </span>
            </summary>
            <div class="faq-answer px-6 pb-4 pt-1 text-gray-600 animate-fade-in">
              {faq.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </div>
</section>
<style>
  .faq-accordion {
    box-shadow: none;
    background: #fafbfc;
    border-radius: 1rem;
    border: 1px solid #e5e7eb;
    margin-bottom: 0.5rem;
    transition: border-color 0.2s, background 0.2s;
  }
  .faq-accordion[open] {
    border-color: #E51F52;
    background: #fff;
  }
  .faq-summary {
    outline: none;
    user-select: none;
    font-size: 1.08rem;
    border-radius: 1rem;
    transition: color 0.2s;
  }
  .faq-accordion[open] .faq-summary {
    color: #E51F52;
    font-weight: 600;
  }
  .faq-answer {
    font-size: 1rem;
    line-height: 1.7;
    border-radius: 0 0 1rem 1rem;
    background: none;
    margin-top: -0.5rem;
    transition: color 0.2s;
  }
  @media (max-width: 640px) {
    .faq-summary, .faq-answer { padding-left: 0.5rem; padding-right: 0.5rem; }
  }
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(-8px); }
    to { opacity: 1; transform: none; }
  }
  .animate-fade-in { animation: fade-in 0.25s ease; }
</style> 