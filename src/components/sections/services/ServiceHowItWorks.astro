---
export interface Props {
  title: string;
  subtitle: string;
  description: string;
  steps: Array<{
    icon?: string;
    title: string;
    description: string;
  }>;
}
const { title, subtitle, description, steps } = Astro.props;
---
<section class="w-full bg-white py-12 md:py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-2xl md:text-3xl font-bold text-primary-600 mb-2">{title}</h2>
      <h3 class="text-xl md:text-2xl text-gray-900 mb-4">{subtitle}</h3>
      <p class="text-gray-600 max-w-2xl mx-auto">{description}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {steps.map((step, i) => (
        <div class="bg-gray-50 rounded-xl shadow p-6 flex flex-col items-center text-center" key={i}>
          {step.icon && <span class="mb-4">{step.icon}</span>}
          <h4 class="text-lg font-semibold text-gray-900 mb-2">{step.title}</h4>
          <p class="text-gray-600">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 