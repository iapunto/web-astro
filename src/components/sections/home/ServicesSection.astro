---
import ServiceCard from '../../common/ServiceCard.astro';
// Importar los íconos/imágenes que necesites para los servicios
import heroSeo from '../../../assets/images/hero-seo.svg';
import organicSeo from '../../../assets/images/organic-seo.svg';
import campaignsLocal from '../../../assets/images/campaigns-local.svg';
import seoOffPage from '../../../assets/images/seo-off-page.svg';

const services = [
  {
    icon: heroSeo,
    altText: 'Analisis SEO',
    title: 'Análisis SEO',
    description:
      'Analizamos tu sitio web para identificar oportunidades de mejora en el posicionamiento en buscadores.',
    linkHref: '#',
    ctaText: 'Ver más',
  },
  {
    icon: organicSeo,
    altText: 'SEO On Page',
    title: 'SEO On-page',
    description:
      'Optimizamos los elementos internos de tu sitio web para mejorar su relevancia para los motores de búsqueda.',
    linkHref: '#',
    ctaText: 'Ver más',
  },
  {
    icon: seoOffPage,
    altText: 'SEO Off Page',
    title: 'SEO Off-page',
    description:
      'Creamos una estrategia de linkbuilding para aumentar la autoridad de tu dominio y mejorar tu posicionamiento.',
    linkHref: '#',
    ctaText: 'Ver más',
  },
  {
    icon: campaignsLocal,
    altText: 'SEO Local',
    title: 'SEO Local',
    description:
      'Optimizamos tu presencia online para destacar en búsquedas geográficas y atraer clientes locales.',
    linkHref: '#',
    ctaText: 'Ver más',
  },
];
---

<section class="services-section relative py-32">
  <div class="container w-4/5 mx-auto text-center">
    <p class="text-xl font-light text-gray-600 uppercase tracking-wider mb-4">
      Impulsa tu visibilidad online
    </p>

    <h2 class="text-4xl md:text-5xl font-bold mb-16">
      SEO que conquista las primeras posiciones
    </h2>

    <p class="text-lg text-gray-600 mb-12 max-w-3xl mx-auto">
      Como <strong>agencia de marketing</strong> especializada en <strong>desarrollo web</strong> y <strong>agencia de SEO</strong>, 
      implementamos estrategias avanzadas para que tu negocio destaque en los resultados de búsqueda y atraiga más clientes.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map((service) => <ServiceCard
        icon={service.icon}
        altText={service.altText || `${service.title} - Servicio`}
        title={service.title}
        description={service.description}
        link={service.linkHref}
        ctaText={service.ctaText}
      />)}
    </div>
  </div>

  <style>
    .services-section {
      background: linear-gradient(180deg, #f3f4f6 0%, #f3f4f6 100%);
      position: relative;
      /* overflow: hidden; */
      /* min-height: 100vh; */
    }

    .services-section::before,
    .services-section::after {
      content: '';
      position: absolute;
      left: -5%;
      right: -5%;
      height: 250px;
      background-repeat: no-repeat;
      background-size: 100% auto;
      background-position: center;
    }

    .services-section::before {
      top: -2%;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 1440 320' preserveAspectRatio='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='white' d='M0,96L48,112C96,128,192,160,288,165.3C384,171,480,149,576,128C672,107,768,85,864,90.7C960,96,1056,128,1152,128C1248,128,1344,96,1392,80L1440,64L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z'%3E%3C/path%3E%3C/svg%3E");
    }

    .services-section::after {
      bottom: -2%;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 1440 320' preserveAspectRatio='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='white' d='M0,64L48,80C96,96,192,128,288,128C384,128,480,96,576,90.7C672,85,768,107,864,128C960,149,1056,171,1152,165.3C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z'%3E%3C/path%3E%3C/svg%3E");
    }

    /* Media queries para ajustar la altura de las ondas en diferentes tamaños de pantalla */
    @media (min-width: 768px) {
      .services-section::before,
      .services-section::after {
        height: 250px;
      }
    }

    @media (min-width: 1024px) {
      .services-section::before,
      .services-section::after {
        height: 300px;
      }
    }

    /* Aseguramos que el contenido tenga el espacio adecuado */
    .services-section > .container {
      position: relative;
      z-index: 1;
      padding: 200px 0; /* Aumentamos el padding vertical */
    }
  </style>
</section>
