---
import BaseHead from "../components/common/BaseHead.astro";
import TopBar from "../components/layout/Header/TopBar.astro";
import Navbar from "../components/layout/Header/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
import BackToTop from "@/components/layout/BackToTop.astro";
import WhatsAppButton from "@/components/layout/WhatsAppButton.astro";

interface Props {
  pageTitle: string;
  description: string;
  image?: string;
  keywords?: string;
}

const pageTitle = "Soluciones de Inteligencia Artificial para Empresas";
const description =
  "Transforma tu negocio con Inteligencia Artificial. Marketing digital, desarrollo web, automatización y consultoría estratégica. Soluciones innovadoras para empresas en la era digital.";
const image =
  "https://res.cloudinary.com/dkb9jfet8/image/upload/v1741038442/logo-v3-cuadrado_seljkv.jpg";
const keywords = [
  "Inteligencia Artificial para empresas",
  "automatización de procesos",
  "desarrollo web con IA",
  "consultoría digital",
  "marketing con IA",
  "Odoo ERP",
  "soluciones tecnológicas",
];
---

<html lang="es">
  <head>
    <BaseHead
      pageTitle={pageTitle}
      description={description}
      image={image}
      keywords={keywords}
    />
  </head>
  <body>
    <TopBar />
    <Navbar />
    <slot />
    <Footer />
    <BackToTop />
    <WhatsAppButton />>

    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"
    ></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
