---
import "../styles/global.css";
import TopBar from "../components/layout/Header/TopBar.astro";
import Navbar from "../components/layout/Header/Navbar.astro";
import Footer from "../components/layout/Footer.astro";

const siteName = "IA Punto"; // Nombre del sitio (se puede definir en un archivo de configuración)
const { pageTitle, description, keywords, image, canonicalURL, noindex } =
  Astro.props; // Título específico para la página principal

// URL base de tu sitio (¡IMPORTANTE! Configúrala)
const siteURL = "http://localhost:4321";

// URL canónica completa
const canonical = canonicalURL
  ? `${siteURL}${canonicalURL}`
  : Astro.url.toString();

// Meta robots
const robots = noindex ? "noindex, nofollow" : "index, follow";

// const posts = await getCollection('blog');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteName} | {pageTitle}</title>
    <meta name="description" content={description} />
    {keywords && <meta name="keywords" content={keywords.join(", ")} />}
    {/* Condición para evitar errores si no hay keywords */}
    {/* Open Graph (para redes sociales) */}
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content={image
        ? `${siteURL}${image}`
        : `${siteURL}/images/default-image.jpg`}
    />
    {/* Imagen por defecto */}
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />
    {/* o "article" para entradas de blog */}

    {/* Twitter Card */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={image
        ? `${siteURL}${image}`
        : `${siteURL}/images/default-image.jpg`}
    />

    {/* Canonical URL (¡IMPORTANTE!) */}
    <link rel="canonical" href={canonical} />

    {/* Meta robots (¡IMPORTANTE!) */}
    <meta name="robots" content={robots} />

    {/* Otros metadatos importantes */}
    <meta name="author" content="IA Punto Soluciones Tecnológicas" />
    <meta name="language" content="es" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <TopBar />
    <Navbar />
    <slot />
    <Footer />
    <button
      id="myBtn"
      title="Ir arriba"
      class="fixed bottom-5 right-5 bg-[#E51F52] hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg z-50 hidden"
      client:load
    >
      <svg
        class="w-6 h-6 text-white dark:text-white"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m5 15 7-7 7 7"></path>
      </svg>
    </button>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"
    ></script>
  </body>
</html>

<script>
  let mybutton = document.getElementById("myBtn");

  window.onscroll = function () {
    if (
      document.body.scrollTop > 20 ||
      document.documentElement.scrollTop > 20
    ) {
      mybutton.classList.remove("hidden");
    } else {
      mybutton.classList.add("hidden");
    }
  };

  mybutton.onclick = function () {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  };
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
