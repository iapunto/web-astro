---
// src/layouts/DefaultLayout.astro
// Layout simplificado que extiende BaseLayout

import BaseLayout from './BaseLayout.astro';

const {
  pageTitle,
  description,
  image,
  keywords,
  robots,
  ctaTitle,
  ctaDescription,
  ctaButtonText,
  ctaButtonHref,
} = Astro.props;
---

<BaseLayout
  pageTitle={pageTitle}
  description={description}
  image={image}
  keywords={keywords}
  robots={robots}
  ctaTitle={ctaTitle}
  ctaDescription={ctaDescription}
  ctaButtonText={ctaButtonText}
  ctaButtonHref={ctaButtonHref}
  variant="default"
  showBreadcrumb={true}
  showBackToTop={true}
  showWhatsApp={true}
  showTracking={true}
  showRecaptcha={true}
>
  <slot />
</BaseLayout>
