---
// src/layouts/LegalLayout.astro
// Layout para páginas legales que extiende BaseLayout

import BaseLayout from './BaseLayout.astro';

const siteName = 'IA Punto';
const { pageTitle, description, content, canonicalURL, noindex } = Astro.props;

// URL base del sitio
const siteURL = 'https://iapunto.com';

// URL canónica completa
const canonical = canonicalURL
  ? `${siteURL}${canonicalURL}`
  : Astro.url.toString();

// Meta robots
const robots = noindex ? 'noindex, nofollow' : 'index, follow';

// Genera la tabla de contenido dinámicamente
const headings = content.match(/<h[2-6].*?>(.*?)<\/h[2-6]>/g) || [];
const toc = headings.map((heading: string) => {
  const id =
    heading.match(/id="([^"]*)"/)?.[1] ||
    heading
      .replace(/<[^>]*>/g, '')
      .trim()
      .toLowerCase()
      .replace(/\s+/g, '-');
  return {
    text: heading.replace(/<[^>]*>/g, ''),
    id: id,
  };
});
---

<BaseLayout
  pageTitle={pageTitle}
  description={description}
  robots={robots}
  variant="legal"
  showBreadcrumb={false}
  showBackToTop={false}
  showWhatsApp={true}
  showTracking={true}
  showRecaptcha={false}
>
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6 legal-page">
    <aside class="sidebar">
      <h2>Tabla de Contenido</h2>
      <ul>
        {
          toc.map((item: { id: string; text: string }) => (
            <li>
              <a href={`#${item.id}`}>{item.text}</a>
            </li>
          ))
        }
      </ul>
    </aside>
    <main class="content">
      <Fragment set:html={content} />
    </main>
  </div>
</BaseLayout>

<style>
  .legal-page {
    display: grid;
    grid-template-columns: 250px 1fr; /* Sidebar y contenido */
    gap: 2rem;
    padding: 2rem;
  }

  .sidebar {
    border-right: 1px solid #ccc;
    padding-right: 1rem;
  }

  .sidebar ul {
    list-style: none;
    padding: 0;
  }

  .sidebar a {
    display: block;
    padding: 0.5rem 0;
    text-decoration: none;
    color: #333;
  }

  .content h2,
  .content h3,
  .content h4,
  .content h5,
  .content h6 {
    scroll-margin-top: 2rem; /* Evita que el encabezado quede oculto por la barra de navegación */
  }

  @media (max-width: 768px) {
    .legal-page {
      grid-template-columns: 1fr; /* Apila el sidebar y el contenido en pantallas pequeñas */
    }
    .sidebar {
      border-right: none;
      border-bottom: 1px solid #ccc;
      padding-bottom: 1rem;
      margin-bottom: 1rem;
    }
  }
</style>
