import DefaultLayout from '../layouts/DefaultLayout.astro';
import { AuthDatabase } from '../lib/auth/database';
import { SessionManager } from '../lib/auth/session';

// Inicializar base de datos
await AuthDatabase.init();

// Verificar si ya est√° autenticado
const isAuthenticated = SessionManager.isAuthenticated(Astro);
if (isAuthenticated) {
  return Astro.redirect('/admin');
}

// Procesar login
let errorMessage = '';
let successMessage = '';

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const username = formData.get('username') as string;
    const password = formData.get('password') as string;

    if (!username || !password) {
      errorMessage = 'Por favor completa todos los campos';
    } else {
      const result = await AuthDatabase.authenticateUser(username, password);
      
      if (result.success && result.user) {
        // Crear sesi√≥n
        SessionManager.setSessionCookie(Astro, result.user);
        successMessage = 'Inicio de sesi√≥n exitoso';
        
        // Redirigir despu√©s de un breve delay
        setTimeout(() => {
          window.location.href = '/admin';
        }, 1000);
      } else {
        errorMessage = result.error || 'Error de autenticaci√≥n';
      }
    }
  } catch (error) {
    errorMessage = 'Error interno del servidor';
    console.error('Error en login:', error);
  }
}
