import DefaultLayout from '../../layouts/DefaultLayout.astro';
import FormattedDate from '../../components/common/FormattedDate.astro';
import ReadingTime from '../../components/common/ReadingTime.astro';
import OptimizedImage from '../../components/common/OptimizedImage.astro';
import { Image } from 'astro:assets';
import SidebarFilters from '../../components/sections/blog/SidebarFilters.astro';
import SmartPaginator from '../../components/common/SmartPaginator.astro';
import { StrapiService } from '../../lib/strapi';
import type { StrapiArticle } from '../../lib/types/strapi';

// Obtener art√≠culos desde Strapi con manejo de errores robusto
let articles = [];
let strapiError = null;

// Intentar primero con StrapiService
try {
  console.log('üîÑ Intentando obtener art√≠culos desde Strapi...');
  articles = await StrapiService.getArticles();
  console.log(`‚úÖ Art√≠culos obtenidos exitosamente: ${articles.length}`);
} catch (error) {
  strapiError = error;
  console.error('‚ùå Error obteniendo art√≠culos de Strapi:', error);
}

// Si no hay art√≠culos o hay error, usar datos de fallback directamente
if (articles.length === 0) {
  console.log('üîÑ Usando art√≠culos de fallback...');
  
  // Datos de fallback directos (no dependen de fetch interno)
  articles = [
    {
      id: 538,
      documentId: "gzw9947072lgi2xaj68h9g70",
      title: "Luma Runway Robotica Oro",
      slug: "luma-runway-robotica-oro",
      description: "Descubre c√≥mo la IA puede impulsar tu PYME: estrategias concretas de marketing, automatizaci√≥n y datos para aumentar ventas.",
      content: "<h2>Introducci√≥n</h2><p>Imaginen un futuro no muy lejano donde la inteligencia artificial no solo crea im√°genes y videos asombrosos, sino que tambi√©n impulsa los cerebros de robots y veh√≠culos aut√≥nomos. Lo que antes parec√≠a ciencia ficci√≥n, ahora es una realidad cada vez m√°s cercana...</p>",
      excerpt: "Descubre c√≥mo la IA puede impulsar tu PYME: estrategias concretas de marketing, automatizaci√≥n y datos para aumentar ventas.",
      publishedAt: "2025-10-07T17:38:02.986Z",
      createdAt: "2025-10-05T00:28:07.010Z",
      updatedAt: "2025-10-07T17:38:02.902Z",
      cover: {
        id: 85,
        url: "/uploads/image_071_ab7fac4955.jpg",
        formats: {
          large: { url: "/uploads/large_image_071_ab7fac4955.jpg" },
          medium: { url: "/uploads/medium_image_071_ab7fac4955.jpg" },
          small: { url: "/uploads/small_image_071_ab7fac4955.jpg" },
          thumbnail: { url: "/uploads/thumbnail_image_071_ab7fac4955.jpg" }
        }
      },
      coverAlt: "AI, artificial intelligence,",
      epicQuote: "La inteligencia artificial no reemplaza la creatividad humana, la potencia.",
      author: {
        id: 2,
        documentId: "jbj60d8z6rcve1mhnc82u62k",
        name: "Marilyn Cardozo",
        email: "marilyn.cardozo@iapunto.com",
        description: "Experta en Desarrollo Digital"
      },
      category: {
        id: 1,
        documentId: "o84bp8407hb18ivetz04pijv",
        name: "Inteligencia Artificial",
        slug: "inteligencia-artificial",
        description: "Art√≠culos sobre IA, machine learning, modelos de lenguaje y aplicaciones empresariales de inteligencia artificial."
      },
      subcategory: {
        id: 4,
        documentId: "gzzg2jxja0ubhfbm4empustz",
        name: "Aplicaciones Empresariales"
      },
      tags: [],
      quote: null
    }
  ];
  
  console.log(`‚úÖ Art√≠culos de fallback cargados: ${articles.length}`);
}

// Si no hay art√≠culos, mostrar mensaje de diagn√≥stico
if (articles.length === 0) {
  console.warn('‚ö†Ô∏è No se encontraron art√≠culos. Posibles causas:');
  console.warn('1. Strapi no est√° disponible');
  console.warn('2. Variables de entorno no configuradas');
  console.warn('3. Token de API inv√°lido');
  console.warn('4. Error de red');
  if (strapiError) {
    console.warn('Error espec√≠fico:', strapiError.message);
  }
}

// Convertir datos de Strapi al formato esperado por el dise√±o original
const blogEntries = articles.map((article) => ({
  data: {
    slug: article.slug,
    title: article.title,
    description: article.description || article.excerpt || '',
    category: article.category?.name || '',
    tags: article.tags?.map((tag: any) => tag.name) || [],
    pubDate: new Date(article.publishedAt),
    cover: article.cover
      ? `https://strapi.iapunto.com${article.cover.url}`
      : '',
    coverAlt: article.coverAlt || article.title,
    epicQuote: article.epicQuote || '',
    author: {
      name: article.author?.name || 'IA Punto',
      image: article.author?.avatar
        ? `https://strapi.iapunto.com${article.author.avatar.url}`
        : '/images/default-avatar.jpg',
    },
  },
  body: article.content,
}));

// Extraer categor√≠as y tags √∫nicas (igual que el dise√±o original)
type Entry = (typeof blogEntries)[0];
const categories = Array.from(
  new Set(blogEntries.map((p: Entry) => p.data.category))
);
const tags = Array.from(
  new Set(
    blogEntries.flatMap((p: Entry) =>
      Array.isArray(p.data.tags)
        ? p.data.tags
        : p.data.tags
          ? [p.data.tags]
          : []
    )
  )
);

// Estado de filtros (igual que el dise√±o original)
const url = new URL(Astro.request.url);
const query = url.searchParams.get('q') || '';
const selectedCategory = url.searchParams.get('category') || '';
const selectedTags = url.searchParams.getAll('tag');

// Filtrado profesional (igual que el dise√±o original)
function matches(post: Entry) {
  const q = query.trim().toLowerCase();
  const inTitle = post.data.title.toLowerCase().includes(q);
  const inDesc = post.data.description.toLowerCase().includes(q);
  const inContent = post.body ? post.body.toLowerCase().includes(q) : false;
  const matchQuery = !q || inTitle || inDesc || inContent;
  const matchCategory =
    !selectedCategory || post.data.category === selectedCategory;
  const postTags = Array.isArray(post.data.tags)
    ? post.data.tags
    : post.data.tags
      ? [post.data.tags]
      : [];
  const matchTags =
    selectedTags.length === 0 ||
    selectedTags.every((t) => postTags.includes(t));
  return matchQuery && matchCategory && matchTags;
}
const filteredPosts = blogEntries.filter(matches);

// Paginaci√≥n sobre filtrados (igual que el dise√±o original)
const postsPerPage = 6;
const totalPages = Math.ceil(filteredPosts.length / postsPerPage);
const currentPage = Number(url.searchParams.get('page')) || 1;

// Validar que la p√°gina actual no exceda el total de p√°ginas
const validCurrentPage = Math.min(currentPage, Math.max(1, totalPages));
const startIndex = (validCurrentPage - 1) * postsPerPage;
const endIndex = startIndex + postsPerPage;
const currentPosts = filteredPosts.slice(startIndex, endIndex);

// Debug info
console.log(
  `üìä Blog Strapi - Total art√≠culos: ${filteredPosts.length}, P√°ginas: ${totalPages}, P√°gina actual: ${validCurrentPage}, Art√≠culos en p√°gina: ${currentPosts.length}`
);

// Handlers para SidebarFilters (igual que el dise√±o original)
function handleFilterChange({ query, category, tags }: any) {
  const params = new URLSearchParams();
  if (query) params.set('q', query);
  if (category) params.set('category', category);
  tags.forEach((tag: any) => params.append('tag', tag));
  window.location.search = params.toString();
}
function handleClear() {
  window.location.search = '';
}

const latestPosts = blogEntries.slice(0, 5);
---

<DefaultLayout
  pageTitle="Blog de Marketing Digital, IA y Negocios"
  description="Consejos, tendencias y casos de √©xito en marketing digital, inteligencia artificial y negocios. Aprende a crecer con IA Punto."
  keywords={[
    'Marketing',
    'SEO',
    'SEO local',
    'B√∫squeda local',
    'IA',
    'Inteligencia artificial',
    'Negocios',
    'Tendencias',
    'Casos de √©xito',
  ]}
  image="/images/default-image.jpg"
  canonicalURL="/blog"
  noindex={false}
>
  <section class="bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
        <h1
