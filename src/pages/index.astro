---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import Hero from '../components/sections/home/Hero.astro';
import FeaturedServices from '../components/sections/home/FeaturedServices.astro';
import HeroSEO from '../components/sections/home/HeroSEO.astro';
import ServicesSection from '../components/sections/home/ServicesSection.astro';
import SEOServices from '../components/sections/home/SEOServices.astro';
import ServiceCategories from '../components/sections/home/ServiceCategories.astro';
import TestimonialsSection from '../components/sections/TestimonialsSection.astro';
import BlogSection from '../components/sections/blog/BlogSection.astro';
import ContactSection from '../components/sections/home/ContactSection.astro';

const {
  title = '¡Transforma tu empresa con IA! Marketing, Web y Automatización para crecer más rápido',
  description = 'Soluciones de Inteligencia Artificial para empresas: marketing digital, desarrollo web, automatización y consultoría estratégica. ¡Haz despegar tu negocio hoy mismo!',
  image = 'https://res.cloudinary.com/dkb9jfet8/image/upload/v1741038442/logo-v3-cuadrado_seljkv.jpg',
  keywords = 'Inteligencia Artificial para empresas, automatización de procesos, desarrollo web con IA, consultoría digital, marketing con IA, Odoo ERP',
  alt = 'Logo de IA Punto, una empresa de soluciones de Inteligencia Artificial',
} = Astro.props;
---

<DefaultLayout
  pageTitle={title}
  image={image}
  description={description}
  keywords={keywords}
  alt={alt}
>
  <Hero />
  <FeaturedServices />
  <HeroSEO />
  <ServicesSection />
  <ServiceCategories />
  <SEOServices />
  <TestimonialsSection />
  <BlogSection />
  <ContactSection />
</DefaultLayout>
