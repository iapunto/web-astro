---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import Hero from '../components/sections/home/Hero.astro';
import FeaturedServices from '../components/sections/home/FeaturedServices.astro';
import HeroSEO from '../components/sections/home/HeroSEO.astro';
import ServicesSection from '../components/sections/home/ServicesSection.astro';
import SEOServices from '../components/sections/home/SEOServices.astro';
import ServiceCategories from '../components/sections/home/ServiceCategories.astro';
import TestimonialsSection from '../components/sections/TestimonialsSection.astro';
import BlogSection from '../components/sections/blog/BlogSection.astro';
import ContactSection from '../components/sections/home/ContactSection.astro';

const title = 'Agencia de Marketing y Desarrollo Web';
const description =
  'Soluciones de inteligencia artificial, marketing digital, desarrollo web, automatización y consultoría estratégica.';
const image =
  'https://res.cloudinary.com/dkb9jfet8/image/upload/v1741038442/logo-v3-cuadrado_seljkv.jpg';
const keywords = [
  'Inteligencia Artificial para empresas',
  'automatización de procesos',
  'desarrollo web con IA',
  'consultoría digital',
  'marketing con IA',
  'Odoo ERP',
];
const alt =
  'Logo de IA Punto, una empresa de soluciones de Inteligencia Artificial';
---

<DefaultLayout
  pageTitle={title}
  image={image}
  description={description}
  keywords={keywords}
  alt={alt}
>
  <Hero />
  <FeaturedServices />
  <HeroSEO />
  <ServicesSection />
  <ServiceCategories />
  <SEOServices />
  <TestimonialsSection />
  <BlogSection />
  <ContactSection />
</DefaultLayout>
